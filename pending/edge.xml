<cleaner id="microsoft_edge" os="windows">
  <label>Microsoft Edge</label>
  <description>Web browser</description>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete cookies, which contain information such as web site preferences, authentication, and tracking identification</description>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\#!001\INetCookies"/>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\#!001\MicrosoftEdge\Cookies"/>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\#!002\INetCookies"/>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\#!002\MicrosoftEdge\Cookies"/>
	<action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\MicrosoftEdge\Cookies"/>
  </option>
  <option id="lastsession">
    <label>Last Browse Session</label>
    <!-- Internet Explorer 7 and 8 -->
    <description>Clears the last browse session</description>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\MicrosoftEdge\User\Default\Recovery\Active"/>
  </option>
  <option id="history">
    <label>History</label>
    <description>List of visited web pages</description>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\#!001\Microsoft\CryptnetUrlCache"/>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\#!002\Microsoft\CryptnetUrlCache"/>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\Microsoft\CryptnetUrlCache"/>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\MicrosoftEdge\User\Default\DataStore\Data"/>
    <action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\MicrosoftEdge\User\Default\DataStore\Indexed\Data"/>
	<action command="delete" search="walk.files" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AppData\User\Default\Indexed DB"/>
	<action command="delete" search="walk.files" path="$LocalAppData\Microsoft\Windows\WebCache"/>
	<action command="delete" search="walk.all" path="$LocalAppData\Packages\Microsoft.MicrosoftEdge_*\AC\#!001\MicrosoftEdge\Cache"/>
  </option>
</cleaner>

